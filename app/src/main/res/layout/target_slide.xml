<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_screen6">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <ImageView
            android:layout_width="@dimen/img_width_height"
            android:layout_height="@dimen/img_width_height"
            app:srcCompat="@drawable/ic_target" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Укажите Вашу цель"
            android:textColor="@android:color/white"
            android:textSize="@dimen/slide_title"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingLeft="@dimen/desc_padding"
            android:paddingRight="@dimen/desc_padding"
            android:orientation="vertical">

            <RadioButton
                android:text="Сбросить вес"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                android:shadowColor="@color/white"
                android:buttonTint="#e75748"
                android:id="@+id/looseWeight" />

            <RadioButton
                android:text="Поддерживать вес"
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:shadowColor="@color/white"
                android:buttonTint="#e75748"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:id="@+id/currentWeight" />

            <RadioButton
                android:text="Набрать вес"
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:shadowColor="@color/white"
                android:buttonTint="#e75748"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:id="@+id/takeWeight" />



        </LinearLayout>

        <!--
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="@dimen/desc_padding"
            android:paddingRight="@dimen/desc_padding"
            android:text="@string/slide_2_desc"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/slide_desc" />
            -->

    </LinearLayout>




</RelativeLayout>