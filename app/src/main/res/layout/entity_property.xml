<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/productName"
        android:textSize="35dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="96dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/spendsContains"
        android:textSize="15dp"
        app:layout_constraintRight_toRightOf="@+id/productName"
        app:layout_constraintLeft_toLeftOf="@+id/productName"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/productName"
        android:layout_height="wrap_content" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberCaloryInProduct"
        android:textSize="20dp"
        app:layout_constraintRight_toRightOf="@+id/productName"
        app:layout_constraintLeft_toLeftOf="@+id/productName"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/spendsContains" />

    <TextView
        android:text="калорий"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/caloryText"
        android:textSize="15dp"
        app:layout_constraintRight_toRightOf="@+id/productName"
        app:layout_constraintLeft_toLeftOf="@+id/productName"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/numberCaloryInProduct" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/completeCaloryNubmer"
        android:textSize="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="35dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="130dp"
        app:layout_constraintTop_toBottomOf="@+id/numberCaloryInProduct" />

    <Button
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plusTwenty"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/completeCaloryNubmer"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/completeCaloryNubmer" />

    <Button
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plusHungred"
        android:textSize="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/completeCaloryNubmer"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/completeCaloryNubmer" />

    <Button
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/minusTwenty"
        android:textSize="20dp"
        app:layout_constraintRight_toLeftOf="@+id/completeCaloryNubmer"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toTopOf="@+id/completeCaloryNubmer"
        android:layout_marginBottom="8dp" />

    <Button
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/minusHungred"
        android:textSize="20dp"
        app:layout_constraintRight_toLeftOf="@+id/completeCaloryNubmer"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/completeCaloryNubmer" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/infoText"
        android:textSize="15dp"
        android:layout_marginTop="25dp"
        app:layout_constraintRight_toRightOf="@+id/plusHungred"
        app:layout_constraintLeft_toLeftOf="@+id/minusHungred"
        app:layout_constraintBottom_toTopOf="@+id/saveToSharedPreference"
        />

    <Button
        android:text="Сохранить"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saveToSharedPreference"
        android:textSize="24dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/completeCaloryNubmer"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />


</android.support.constraint.ConstraintLayout>